  fi

  AC_MSG_RESULT([$this_is_openbsd])
fi

this_is_atheos=no
if test x$we_have_sed = xyes; then
  AC_MSG_CHECKING([if this is AtheOS])
  x=`echo $target_os |tr A-Z a-z |sed "s/.*atheos.*/atheos/"`
  if test x$x = xatheos; then
