  AC_MSG_CHECKING([if this is OS/2])
  x=`echo $target_os |tr A-Z a-z |sed "s/.*os2.*/os2/"`
  if test x$x = xos2; then
    this_is_os2=yes
    have_non_posix_threads=yes
    enable_cdrom=yes
    enable_pthreads=no
